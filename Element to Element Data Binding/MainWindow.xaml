<Window x:Class="Element_to_Element_Data_Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Element_to_Element_Data_Binding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider x:Name="slider" HorizontalAlignment="Left" Height="75" Margin="57,41,0,0" VerticalAlignment="Top" Width="370" Maximum="50" Value="12"/>
        <TextBlock HorizontalAlignment="Left" Height="87" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Margin="124,121,0,0" Text="OwO" FontSize="{Binding Value, ElementName=slider}"/>

    </Grid>
</Window>
